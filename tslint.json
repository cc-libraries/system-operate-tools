{
    "extends": [ "tslint:recommended", "tslint-react" ],
    "rules": {
      "max-line-length": {
        "options": [
          120
        ]
      },
      "new-parens": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": false,
      "ordered-imports": false,
      "eofline": false,
      "trailing-comma": [true, {"multiline": "always", "singleline": "never"}]
    },
    "jsRules": {
      "max-line-length": {
        "options": [
          120
        ]
      }
    }
}